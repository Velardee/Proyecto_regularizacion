<% include _header %>
    <%if (alert!=0) {%>
        <div id="Alert" class="alert <%= color %>">
            <%= alert.mensaje %>
                <a id="close" href="#" class="close" data-dismiss="alert">&times;</a>
        </div>
        <%;}%>
            <div class="row container">
                <div class="col-md-12">
                    <form action="/zombies/delete/<%= zombie.id %>?_method=DELETE" method="post">
                        <div class="form-group">
                            <label for="">Nombre</label>
                            <input type="text" class="form-control" name="name" value="<%= zombie.name %>" disabled>
                        </div>
                        <div class="form-group">
                            <label for="">Email</label>
                            <input type="text" class="form-control" name="email" value="<%= zombie.email %>" disabled>
                        </div>
                        <div class="form-group">
                            <label for="">Tipo</label>
                            <input type="text" class="form-control" name="type" value="<%= zombie.type %>" disabled>
                        </div>
                        <button class="btn btn-danger">Eliminar Zombie<i class="fas fa-trash text-light"></i></button>
                    </form>
                </div>
            </div>

            <script src="/jquery/jquery.min.js"></script>
            <script src="/js/bootstrap.min.js"></script>

            <%if (alert!=0) {
                %>
                <script type="text/javascript">
                    $('#close').click(function() {
                        $('#Alert').hide('fade');
                    })
                </script>
                <%;}%>

                    <% include _footer %>