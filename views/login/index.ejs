<% include _header %>
    <%if (alert!=0) {%>
        <div id="Alert" class="alert <%= color %>">
            <%= alert %>
                <a id="close" href="#" class="close" data-dismiss="alert">&times;</a>
        </div>
        <%;}%>
            <h1>
                <%= title %>
            </h1>
            <h1>Iniciar Sesion</h1>
            <div class="row container">
                <div class="col-md-12">
                <form action="users/login" method="post">
                    <div class="form-group">
                        <label for="">Nombre de usuario</label>
                        <input type="text" placeholder="Nombre de usuario" name="user"> 
                    </div>
                    <div class="form-group">
                        <label for="">Contraseña</label>
                        <input type="text" placeholder="Contraseña" name="pass">
                    </div>
                    <button class="btn btn-primary">Iniciar sesion<i class="fas fa-plus text-light"></i></button>
                    
                </form>
                <a href="/users/add"><input type="submit"  value="Registrarse"></a>
            </div>
        </div>

            <script src="/jquery/jquery.min.js"></script>
            <script src="/js/bootstrap.min.js"></script>

            <%if (alert!=0) {
                %>
                <script type="text/javascript">
                    $('#close').click(function() {
                        $('#Alert').hide('fade');
                    })
                </script>
                <%;}%>

                    <% include _footer %>